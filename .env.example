# ============================================================================
# MLflow Configuration
# ============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=sqlite:///mlruns/mlflow.db
MLFLOW_ARTIFACT_ROOT=file:///artifacts
MLFLOW_EXPERIMENT_NAME=breast-cancer-detection
MLFLOW_MODEL_REGISTRY_URI=models:/breast-cancer-classifier

# ============================================================================
# Prefect Configuration
# ============================================================================
PREFECT_API_URL=http://localhost:4200/api
PREFECT_WORK_QUEUE_NAME=ml-training
PREFECT_API_KEY=your-api-key-here
PREFECT_WORKSPACE=mlops-workspace

# ============================================================================
# FastAPI Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_LOG_LEVEL=info
API_SECRET_KEY=your-super-secret-key-here-change-in-production
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Model Configuration
# ============================================================================
MODEL_NAME=breast-cancer-classifier
VALIDATION_METRIC=f1_score
VALIDATION_THRESHOLD=0.85
MODEL_VERSION=1.0.0
MODEL_REGISTRY=mlflow

# ============================================================================
# Database Configuration (PostgreSQL for production)
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mlops
POSTGRES_USER=mlops_user
POSTGRES_PASSWORD=mlops_password@123
POSTGRES_SSL_MODE=prefer
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# ============================================================================
# Redis Configuration (for caching and queuing)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# ============================================================================
# Monitoring & Observability
# ============================================================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
JAEGER_URL=http://localhost:14268
LOKI_URL=http://localhost:3100
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Drift Detection Configuration
# ============================================================================
DRIFT_THRESHOLD=0.1
DRIFT_CHECK_INTERVAL=3600  # seconds
DRIFT_ALERT_EMAIL=alerts@example.com
DRIFT_ALERT_SLACK_WEBHOOK=

# ============================================================================
# Feature Store Configuration
# ============================================================================
FEATURE_STORE_TYPE=feast
FEATURE_STORE_REGISTRY=./feature_store/
FEATURE_STORE_PROVIDER=local

# ============================================================================
# Security
# ============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============================================================================
# AWS Configuration (for cloud deployment)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=mlops-models
AWS_SAGEMAKER_ENDPOINT=

# ============================================================================
# Development Flags
# ============================================================================
DEBUG=true
TESTING=false
DEVELOPMENT=true
